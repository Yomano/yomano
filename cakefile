{exec} = require 'child_process'

task 'build', 'Build project from src/*.coffee to dist/*.js', ->
    exec 'coffee --compile --output dist/ src/', (err, stdout, stderr) ->
        throw err if err
        console.log stdout + stderr

task 'watch', 'Build project from src/*.coffee to dist/*.js', ->
    exec 'coffee --watch --compile --output dist/ src/', (err, stdout, stderr) ->
        throw err if err
        console.log stdout + stderr
